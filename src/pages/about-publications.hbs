{{#extend "layout"}}
    {{#content "main"}}

        <section class="about">
            <div class="container">
                <div class="about__wrapper">
                    <nav class="about__nav">
                        <h1 class="about__title main-title">О нас</h1>
                        <ul class="about__nav-list">
                            {{#each aboutNav }}
                                <li class="about__nav-item{{#if this.active }} active{{/if}}">
                                    <a href="#">{{this.name}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </nav>
                    <div class="about__body">
                        <ul class="about__publications">
                            {{#each publications }}
                                <li class="about__publication">
                                    <a class="about__publication-link" href="#">
                                        <h3 class="about__publication-title">{{this.title}}</h3>
                                        <span class="about__publication-text">{{this.text}}</span>
                                    </a>
                                 </li>
                            {{/each}}
                        </ul>
                        <ul class="about__publications">
                            {{#each publications }}
                                <li class="about__publication">
                                    <a class="about__publication-link" href="#">
                                        <h3 class="about__publication-title">{{this.title}}</h3>
                                        <span class="about__publication-text">{{this.text}}</span>
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}