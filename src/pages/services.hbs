{{#extend "layout"}}
    {{#content "main"}}

        <section class="services">
            <div class="container">
                <div class="services__wrapper">
                    <div class="services__body">
                        <div class="services__list js-fixed-layout">
                            <div class="services__img-slider js-fixed-container">
                                <div class="services__img-slider-inner swiper js-vertical-scroll-img-slider js-fixed-element">
                                    <div class="swiper-wrapper">
                                        {{#each services }}
                                            <div class="services__img-slide swiper-slide">
                                                <img src="{{this.img}}" alt="Достижение">
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <div class="services__slider swiper js-vertical-scroll-slider">
                                <div class="services__slider-wrapper swiper-wrapper">
                                    {{#each services }}
                                        <div class="services__slide swiper-slide js-vertical-scroll-slide">
                                            <h3 class="services__title">{{this.title}}</h3>
                                            <p class="services__text">{{this.text}}</p>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}