{{#extend "layout"}}
    {{#content "main"}}

        <section class="services">
            <div class="container">
                <div class="services__wrapper">
                    <div class="services__body">
                        <h1 class="services__main-title">Услуги</h1>
                        <ul class="services__list">
                            {{#each services }}
                                <li class="services__item">
                                    <h2 class="services__title">{{this.title}}</h2>
                                    <div class="services__text">
                                        <p>{{this.text}}</p>
                                    </div>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}