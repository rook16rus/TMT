{{#extend "layout"}}
    {{#content "main"}}

        <section class="portfolio">
            <div class="container">
                <div class="portfolio__wrapper">
                    <div class="portfolio__nav">
                        <div class="side-menu">
                            <h1 class="side-menu__title main-title">Портфолио</h1>
                            <ul class="side-menu__nav-list">
                                {{#each portfolioNav }}
                                    <li class="side-menu__nav-item{{#if this.active }} active{{/if}}">
                                        <a href="#">{{this.name}}</a>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <div class="portfolio__body">
                        <ul class="portfolio__list">
                            {{#each portfolio }}
                                <li class="portfolio__item">
                                    <a class="portfolio__link" href="portfolio-single.html">
                                        <img class="lazyload" data-src="{{this.img}}" alt="Проект">
                                        <h3 class="portfolio__description">{{this.description}}</h3>
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}