{{#extend "layout"}}
    {{#content "main"}}

        <section class="about">
            <div class="container">
                <div class="about__wrapper">
                    <nav class="about__nav">
                        <h1 class="about__title main-title">О нас</h1>
                        <ul class="about__nav-list">
                            {{#each aboutNav }}
                                <li class="about__nav-item{{#if this.active }} active{{/if}}">
                                    <a href="#">{{this.name}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </nav>
                    <div class="about__body">
                        <div class="about__awards">
                            <div class="about__awards-img-slider">
                                <div class="about__awards-img-slider-inner swiper">
                                    <div class="swiper-wrapper">
                                        {{#each awards }}
                                            <div class="about__awards-img-slide swiper-slide">
                                                <img src="{{this.img}}" alt="Достижение">
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <div class="about__awards-slider swiper">
                                <div class="about__awards-slider-wrapper swiper-wrapper">
                                    {{#each awards }}
                                        <div class="about__awards-slide swiper-slide">
                                            <span class="about__awards-date">{{this.date}}</span>
                                            <p class="about__awards-text">{{this.text}}</p>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}