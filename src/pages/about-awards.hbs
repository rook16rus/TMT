{{#extend "layout"}}
    {{#content "main"}}

        <section class="about">
            <div class="container">
                <div class="about__wrapper">
                    <nav class="about__nav">
                        <h1 class="about__title main-title">О нас</h1>
                        <ul class="about__nav-list">
                            {{#each aboutNav }}
                                <li class="about__nav-item{{#if this.active }} active{{/if}}">
                                    <a href="{{this.href}}">{{this.name}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </nav>
                    <div class="about__body">
                        <ul class="about__awards-list">
                            {{#each awards }}
                                <li class="about__awards-item">
                                    <span class="about__awards-date">{{this.date}}</span>
                                    <div class="about__awards-text">
                                        <p>{{this.text}}</p>
                                    </div>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}