<div class="loader">
    <div class="loader__block">
        <img class="loader__img" src="img/logo.svg" alt="Логотип">
    </div>
    <div class="loader__block">
        <span class="loader__percent">
            Загрузка&nbsp;<span class="loader__percent-number">15</span>%
        </span>
    </div>
</div>

<style>
    .loader {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 600;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: #fff;
    }

    .loader__block {
        display: flex;
        justify-content: center;
        padding: 7rem 0;
    }

    .loader__block:first-child {
        border-bottom: 1px solid #DDDDDD;
    }

    .loader__img {
        width: 20.4rem;
        height: 9.7rem;
    }

    .loader__percent {
        font-weight: 400;
        font-size: 1.6rem;
        line-height: 100%;
        text-transform: uppercase;
        color: #000;
    }

    .animatable .loader {
        opacity: 0;
        visibility: hidden;
        transition: opacity .4s ease .4s, visibility 0s linear .8s;
    }
</style>

<script>
    let percentNumber = document.querySelector('.loader__percent-number');

    const interval = setInterval(() => {
        const isPageInit = percentNumber.closest('.animatable');

        if (+percentNumber.innerHTML >= 95) {
            clearTimeout(interval)
        } else {
            percentNumber.innerHTML = +percentNumber.innerHTML + 1;
        }

        if (isPageInit) {
            percentNumber.innerHTML = 100;
            clearTimeout(interval);
        }
    }, 60)
</script>